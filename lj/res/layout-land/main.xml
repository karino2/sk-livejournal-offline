<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center"
	android:background="#99ccff">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/lj_logo_land">
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
			<Button android:id="@+id/main_bt_post" android:layout_height="wrap_content"
		    android:text="@string/createpost"
			android:textSize="20sp" android:layout_width="0dp" android:layout_weight="1"></Button>
		<Button android:layout_height="wrap_content" android:id="@+id/main_bt_ep"
		    android:text="@string/profile_manager"
			android:textSize="20sp" android:layout_width="0dp" android:layout_weight="1"></Button>
		<Button android:layout_height="wrap_content" android:id="@+id/main_bt_drafts"
		    android:text="@string/drafts"
			android:textSize="20sp" android:layout_width="0dp" android:layout_weight="1"></Button>
	</LinearLayout>
</LinearLayout>