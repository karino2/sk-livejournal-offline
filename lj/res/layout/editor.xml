<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center"
	android:background="#99CCFF">
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
		<Button android:layout_height="wrap_content" android:id="@+id/edit_bt_italic"
		    android:text="italic"
			android:textSize="20sp" android:layout_width="wrap_content"></Button>
		<Button android:layout_height="wrap_content" android:id="@+id/edit_bt_bold"
		    android:text="bold"
			android:textSize="20sp" android:layout_width="wrap_content"></Button>
		<Button android:layout_height="wrap_content" android:id="@+id/edit_bt_normal"
		    android:text="normal"
		    android:checked="true"
			android:textSize="20sp" android:layout_width="wrap_content"></Button>	    	    	    
	</LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" >

			<EditText android:layout_width="fill_parent" android:id="@+id/edit_et_subject"
				android:layout_height="48dp"></EditText>
			
			<EditText android:layout_width="fill_parent"
			    android:minHeight="400dp"
				android:layout_height="wrap_content"
				 android:id="@+id/edit_et_post"
				 android:gravity="top"
				></EditText>
		</LinearLayout>
	</ScrollView>	
	    	
</LinearLayout>